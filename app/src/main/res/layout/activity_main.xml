<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:orientation="vertical"
    tools:context="com.zhang.hostmanage.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#E5E5E5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="2016年8月31日"
            android:textColor="#000000"
            android:textSize="28sp" />

        <!--<TextView-->
        <!--android:id="@+id/main_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center"-->
        <!--android:padding="10dp"-->
        <!--android:text="09:10"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="28sp" />-->
        <!--<com.zhang.hostmanage.view.DateView-->
        <!--android:id="@+id/show_date"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:padding="10dp"></com.zhang.hostmanage.view.DateView>-->

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <RadioGroup
            android:layout_width="900dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_ward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/color_radiobutton"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="患者"
                android:textColor="@drawable/selector_button"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radio_sickbed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/color_radiobutton"
                android:button="@null"
                android:gravity="center"
                android:text="病床"
                android:textColor="@drawable/selector_button"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radio_doctor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/color_radiobutton"
                android:button="@null"
                android:gravity="center"
                android:text="医生"
                android:textColor="@drawable/selector_button"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radio_nurse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/color_radiobutton"
                android:button="@null"
                android:gravity="center"
                android:text="护士"
                android:textColor="@drawable/selector_button"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radio_device"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/color_radiobutton"
                android:button="@null"
                android:gravity="center"
                android:text="设备"
                android:textColor="@drawable/selector_button"
                android:textSize="24sp" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>


    <include layout="@layout/ward_button"></include>
</LinearLayout>
